= form_for(@account, :html => {:class => 'nice'}) do |f|
	- if @account.errors.any?
		#error-explanation
			%h2
				= pluralize(@account.errors.count, "error") 
				prohibited this account from being saved:
			
			%ul
				- @account.errors.full_messages.each do |msg|
					%li= msg
					
	.field{:class => 'row'}
		-#= f.label :name
		= f.text_field :name, :placeholder => "Company Name", :class => 'input-text medium'
		
	.field{:class => 'row'}
		-#= f.label :subdomain
		= f.text_field :subdomain, :placeholder => "Subdomain", :class => 'input-text medium'
		
	.client_fields
		= f.fields_for :clients, @account_master do |builder|
			= render 'client_fields', :f => builder
		
	.actions
		= f.submit 'Save »', :class => 'nice medium radius blue button'
		= link_to 'Cancel »', @account, :class => 'nice medium radius white button'
		