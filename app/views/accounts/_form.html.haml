= form_for(@account, :html => {:class => 'nice'}) do |f|
	- if @account.errors.any?
		#error-explanation
			%h2
				= pluralize(@account.errors.count, "error") 
				prohibited this account from being saved:
			
			%ul
				- @account.errors.full_messages.each do |msg|
					%li= msg
				
	.field{:class => 'row'}
		= f.label :name
		= f.text_field :name, :class => 'input-text medium'
		
	.field{:class => 'row'}
		= f.label :subdomain
		= f.text_field :subdomain, :class => 'input-text medium'
		
	.actions
		= f.submit 'Save »' , :class => 'nice medium radius blue button'
		
		-if params[:action] == 'edit'
			= link_to 'Cancel »', @account, :class => 'nice medium radius white button'
		-else
			= link_to 'Cancel »', accounts_path, :class => 'nice medium radius white button'
		
