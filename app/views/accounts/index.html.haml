%h3 Account Directory

.row
	%table{:class => 'account list nine columns'}
		%thead
			%tr
				%th.col Name
				%th.col Subdomain
				%th.col

		%tbody
			- @accounts.each do |account|
				%tr
					%td.desc= link_to account.name, site_url(:subdomain => account.subdomain)
					%td.desc= account.subdomain
					%td= link_to 'Delete', account, confirm: 'Are you sure?', method: :delete

