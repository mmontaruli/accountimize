%h4 Account Dashboard

%p
	%strong Name:
	= @account.name

%p
	%strong Subdomain:
	= @account.subdomain

- if signed_in_client.is_account_master
	%p
		= link_to 'Edit', edit_account_path(@account)
		|
		= link_to 'Delete Account', @account, :data => { :confirm => 'Are you sure?' }, method: :delete
		|
		= link_to 'Back', accounts_url(:subdomain => 'www')

