= form_for(@client, :html => {:class => 'nice'}) do |f|
	- if @client.errors.any?
		#error_explanation
			%h2
				= pluralize(@client.errors.count, "error")
				prohibited this client from being saved:

			%ul
				- @client.errors.full_messages.each do |msg|
					%li= msg

	.field{:class => 'row'}
		= f.text_field :name, :placeholder => "Client Name", :class => 'input-text medium'

	.field{:class => 'row'}
		= f.text_field :address_street_1, :placeholder => "Street 1", :class => 'input-text large'

	.field{:class => 'row'}
		= f.text_field :address_street_2, :placeholder => "Street 2", :class => 'input-text large'

	.field{:class => 'row'}

		%div{:class => 'four columns'}
			= f.text_field :address_city, :placeholder => "City", :class => 'input-text medium'

		%div{:class => 'three columns'}
			= f.text_field :address_state, :placeholder => "State", :class => 'input-text small'

		%div{:class => 'three columns'}
			= f.text_field :address_zip, :placeholder => "Zip Code", :class => 'input-text small'

	.field{:class => 'row'}
		= f.text_field :country, :placeholder => "Country", :class => 'input-text medium'

	-if (params[:action]) == 'new'
		= f.hidden_field :account_id, :value => @account.id
		= f.hidden_field :is_account_master, :value => false



	.actions
		= f.submit 'Save »' , :class => 'nice medium radius blue button'

		-if params[:action] == 'edit'
			= link_to 'Cancel »', client_path(@client), :class => 'nice medium radius white button'
		-else
			= link_to 'Cancel »', clients_path, :class => 'nice medium radius white button'
