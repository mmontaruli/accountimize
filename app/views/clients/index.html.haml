%h2 Clients

%table
	%thead
		%tr
			%th Organization
			%th State
			%th Country
			%th
			%th
		
	%tbody
		- @clients.each do |client|
			%tr
				%td= link_to client.name, client
				%td= client.address_state
				%td= client.country
				%td= link_to 'Edit', edit_client_path(client)
				%td= link_to 'Delete', client, confirm: 'Are you sure?', method: :delete
			
%p= link_to 'New Client', new_client_path