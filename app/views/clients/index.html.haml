%h3 Clients

.row
	%table{:class => 'client list nine columns'}
		%thead
			%tr
				%th.col Organization
				%th.col State
				%th.col Country
				%th.col
				%th.col
		
		%tbody
			- @clients.each do |client|
				%tr
					%td= link_to client.name, client
					%td= client.address_state
					%td= client.country
					%td= link_to 'Edit', edit_client_path(client)
					%td= link_to 'Delete', client, confirm: 'Are you sure?', method: :delete
			
