%h4= @client.name
= link_to 'Edit Client', edit_client_path(@client)

%p
	%strong Address:
	%br
	= render 'client_address'

%p
	%h5 Contacts
	%ul
		- @users.each do |user|
			%li= "#{user.first_name} #{user.last_name} - #{user.email}"

%p= link_to 'Add Contact', new_user_path(:client_id => @client)

%p
	%ul{:class=> "button-group radius"}
		%li= link_to 'Create New Estimate', new_estimate_path(:client_id => @client), :class => "small radius button"
		%li= link_to 'Create New Invoice', new_invoice_path(:client_id => @client), :class => "small radius button"