- if signed_in_client.is_account_master
	.row
		.field.large-3.columns
			= f.label :client_id
			= f.collection_select(:client_id, @clients, :id, :name, {:include_blank => true}, data: {'url-base' => clients_path}, :class => 'client_select')
			%p.address
				= render 'clients/client_address' if @estimate.client_id

			.contact
				= render 'clients/user_select' if @estimate.client_id

		.field.large-3.columns.large-offset-4.end
			=f.label :number
			=f.text_field :number, :class => ''
			.date-select
				=f.label :date
				=f.date_select :date

- else
	.estimate-header.row
		.large-4.columns.client-address
			= @client.name
			%br
			= render 'clients/client_address'

		.large-3.columns.large-offset-3.end
			%p
				%strong Estimate Number:
				= @estimate.number

			%p
				%strong Date:
				= @estimate.date
