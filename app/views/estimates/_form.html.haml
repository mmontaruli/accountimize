= form_for(@estimate, :html => {:class => 'nice'}) do |f|
	- if @estimate.errors.any?
		#error_explanation
			%h2
				= pluralize(@estimate.errors.count, "error")
				prohibited this estimate from being saved:

			%ul
				- @estimate.errors.full_messages.each do |msg|
					%li= msg

	.row
		.field{:class => 'three columns'}
			= f.label :client_id
			= f.collection_select(:client_id, @clients, :id, :name, {:include_blank => true}, data: {'url-base' => clients_path}, :class => 'client_select')
			%p.address
				= render 'clients/client_address' if @estimate.client_id

		.field{:class => 'four columns offset-by-four'}
			= f.label :number
			=f.text_field :number, :class => 'input-text small'
			=f.label :date
			=f.date_select :date

	%div
		%table{:cellspacing => 4, :class => 'line_items has_total'}
			%thead
				%tr
					%th
					%th.col Item #
					%th{:class => "col lock"}
						%span Lock
					%th.col Description
					%th.col Unit
					%th.col Qty
					%th.col Unit Price
					%th.col Line Total
					%th
					%th
			%tbody
				= f.fields_for :line_items do |builder|
					= render 'line_item_fields', :f => builder
				%tr.add_lines
					%td.blank
					%td{:colspan => 7, :class => "desc blank"}= link_to_add_fields "Add lines", f, :line_items, :class => 'small radius blue button'
				%tr.total_line
					%td.blank
					%td{:colspan => 6, :class => "desc blank"}
						%strong Total
					%td{:class => "amount blank total_price"}
						%strong= number_to_currency(@estimate.total_price)
					%td.blank

	.actions
		%div{:class => "accept-estimate row"}
			-if can_approve_estimate(f.object) && !signed_in_client.is_account_master
				= f.check_box :is_accepted
				= f.label :is_accepted, "Approve Estimate"
			-elsif !can_approve_estimate(f.object)
				%div{:class => "notification eight columns"} There are outstanding negotiations that have not been approved yet
			-elsif signed_in_client.is_account_master
				%div{:class => "notification eight columns"} Client has not yet approved estimate


		= f.submit 'Save »' , :class => 'nice medium radius blue button'
		-if params[:action] == 'edit'
			= link_to 'Cancel »', estimate_path(@estimate), :class => 'nice medium radius white button'
		-else
			= link_to 'Cancel »', estimates_path, :class => 'nice medium radius white button'