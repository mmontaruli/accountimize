= form_for(@estimate, :html => {:class => 'nice'}) do |f|	
	- if @estimate.errors.any?
		#error_explanation
			%h2
				= pluralize(@estimate.errors.count, "error")
				prohibited this estimate from being saved:
				
			%ul
				- @estimate.errors.full_messages.each do |msg|
					%li= msg
	
	.row
		.field{:class => 'three columns'}
			= f.label :client_id
			= f.collection_select(:client_id, @clients, :id, :name, :include_blank => true)
			%p.address
				-#= render 'clients/client_address' if params[:action] == 'edit'
				= render 'clients/client_address' if @estimate.client_id

		.field{:class => 'four columns offset-by-four'}
			= f.label :number
			=f.text_field :number, :class => 'input-text small'
			=f.label :date
			=f.date_select :date
		
	%div	
		%table.line_items{:cellspacing => 4}
			%thead
				%tr
					%th
					%th.col Item #
					%th.col Description
					%th.col Qty
					%th.col Unit Price
					%th.col Line Total
					%th Delete:
			%tbody
				= f.fields_for :line_items do |builder|
					= render 'line_item_fields', :f => builder
				%tr.add_lines
					%td{:colspan => 7}= link_to_add_fields "Add lines", f, :line_items
				%tr.total_line
					%td
					%td{:colspan => 4} Total
					%td.total_price= number_to_currency(@estimate.total_price)
					%td		

	.actions
		= f.submit 'Save »' , :class => 'nice medium radius blue button'
		-if params[:action] == 'edit'
			= link_to 'Cancel »', @estimate, :class => 'nice medium radius white button'
		-else
			= link_to 'Cancel »', estimates_path, :class => 'nice medium radius white button'
		