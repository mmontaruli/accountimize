%h3 Estimates

.row
	%table{:class => 'estimate list nine columns'}
		%thead
			%tr
				%th.col Estimate
				%th.col Client Name
				%th.col Date
				%th.col Total
				%th.col
				%th.col
		
		%tbody
			- @estimates.each do |estimate|
				%tr
					%td.estimate_number= link_to estimate.number, account_estimate_path(@account,estimate)
					%td.client_name= link_to estimate.client.name, account_client_path(@account,estimate.client)
					%td.estimate_date= estimate.date
					%td.estimate_total= number_to_currency(estimate.total_price)
					%td.estimate_edit= link_to 'Edit', edit_account_estimate_path(@account,estimate)
					%td.estimate_delete= link_to 'Delete', account_estimate_path(@account,estimate), confirm: 'Are you sure?', method: :delete

