-if notice
	%p#notice= notice

%h2 Your Estimates

%table.estimate_list
	%thead
		%tr
			%th.col Estimate
			%th.col Date
			%th.col Total
			%th.col
			%th.col
		
	%tbody
		- @estimates.each do |estimate|
			%tr
				-#%td.estimate_number= estimate.number
				%td.estimate_number= link_to estimate.number, estimate
				%td.estimate_date= estimate.date
				%td.estimate_total= number_to_currency(estimate.total_price)
				%td.estimate_edit= link_to 'Edit', edit_estimate_path(estimate)
				%td.estimate_delete= link_to 'Delete', estimate, confirm: 'Are you sure?', method: :delete

