%h3 Invoices

.row
	%table{:class => "invoice list nine columns"}
		%thead
			%tr
				%th.col Invoice
				%th.col Client
				%th.col Date
				%th.col Total
				%th.col
				%th.col

		%tbody
			- @invoices.each do |invoice|
				%tr
					%td.invoice_number= link_to invoice.number, account_invoice_path(@account,invoice)
					- if signed_in_client.is_account_master
						%td{:class => "desc client_name"}= link_to invoice.client.name, account_client_path(@account,invoice.client)
					-else
						%td{:class => "desc client_name"}= invoice.client.name
					%td.invoice_date= invoice.date
					%td{:class => "amount invoice_total"}= number_to_currency(invoice.total_price)
					%td= link_to 'Edit', edit_account_invoice_path(@account,invoice)
					%td= link_to 'Delete', account_invoice_path(@account,invoice), confirm: 'Are you sure?', method: :delete

