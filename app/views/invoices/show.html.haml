-if signed_in_client.is_account_master
	.row
		%p.large-3.columns.large-offset-8= link_to "Edit Invoice Â»", edit_invoice_path(@invoice), :class => 'small radius button'

.row
	.large-4.columns.client-address
		= @client.name
		%br
		= render 'clients/client_address'

	.large-3.columns.large-offset-3.end
		%p
			%strong Invoice Number:
			= @invoice.number

		%p
			%strong Date:
			= @invoice.date

%table.line_items.invoice_show.doc
	%thead
		%tr
			%th.col Item #
			%th.col Description
			%th.col Unit
			%th.col Qty
			%th.col Unit Price
			%th.col Line Total

	%tbody
		- @invoice.line_items.each do |line_item|
			%tr
				%td.line_num= line_item.number
				%td.desc.line_name= line_item.name
				%td.price_type= line_item.price_type
				%td.line_qty= line_item.quantity
				%td.amount.line_u_price= number_with_precision(line_item.unit_price, :precision => 2, :delimiter => ',')
				%td.amount.line_t_price= number_with_precision(line_item.total_price, :precision => 2, :delimiter => ',')
		%tr.total_line
			%td.desc.blank{:colspan => 5}
				%strong Total
			%td.amount.blank.total_price
				%strong= number_to_currency(@invoice.total_price)