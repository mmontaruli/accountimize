<h1>Listing line_items</h1>

<table>
  <tr>
    <th>Number</th>
    <th>Name</th>
    <th>Quantity</th>
    <th>Unit price</th>
    <th>Is enabled</th>
    <th>Estimate</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @line_items.each do |line_item| %>
  <tr>
    <td><%= line_item.number %></td>
    <td><%= line_item.name %></td>
    <td><%= line_item.quantity %></td>
    <td><%= line_item.unit_price %></td>
    <td><%= line_item.is_enabled %></td>
    <td><%= line_item.estimate_id %></td>
    <td><%= link_to 'Show', line_item %></td>
    <td><%= link_to 'Edit', edit_line_item_path(line_item) %></td>
    <td><%= link_to 'Destroy', line_item, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

