.row
	%div{:class => "seven columns centered"}
		.panel
			%h5 Please enter your email address below
			%p
				Please enter your email address into the field below so that we can locate your account.
			%p= "If you do not have an account, please #{link_to 'sign up', sign_up_path}.".html_safe

			= form_tag(:action => 'subdomain_found') do
				.field{:class => 'row collapse'}
					%div{:class => 'six columns'}
						= text_field_tag "email", nil, :placeholder => "Email address"
					%div{:class => 'two columns end'}
						= submit_tag "Search", :class => 'button expand postfix'