%h3 Sign Up

= form_for(@user, :html => {:class => 'nice'}) do |f|
	- if @user.errors.any?
		.error_messages
			%h4 Form is invalid
			%ul
				- for message in @user.errors.full_messages
					%li= message
					
	.field{:class => "row"}
		= f.label :email
		= f.text_field :email, :class => "input-text medium"
		
	.field{:class => "row"}
		= f.label :password
		= f.password_field :password, :class => "input-text medium"
		
	.field{:class => "row"}
		= f.label :password_confirmation
		= f.password_field :password_confirmation, :class => "input-text medium"

	.actions
		= f.submit 'Create User »', :class => 'nice medium radius blue button'
		= link_to 'Cancel »', site_url, :class => 'nice medium radius white button'